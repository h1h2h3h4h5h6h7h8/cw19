@model App.Domain.Core.Memory.Entities.Member
@using App.Domain.Core.Memory.Entities.Enum

@{
    ViewData["Title"] = "حذف عضو";
}

<h1>آیا مطمئن هستید که می‌خواهید این عضو را حذف کنید؟</h1>

<table class="table">
    <tr>
        <th>نام</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>نام خانوادگی</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>کد ملی</th>
        <td>@Model.NationalCode</td>
    </tr>
    <tr>
        <th>تاریخ تولد</th>
        <td>@Model.BirthDateString</td>
    </tr>
    <tr>
        <th>تاریخ ثبت‌نام</th>
        <td>@Model.RegisterDateString</td>
    </tr>
    <tr>
        <th>جنسیت</th>
        <td>@Model.Gender.ToString()</td>
    </tr>
    <tr>
        <th>امتیاز</th>
        <td>@Model.Score</td>
    </tr>
</table>

<form method="post" action="@Url.Action("Delete", "Member", new { id = Model.Id })">
    <button type="submit" class="btn btn-danger">حذف</button>
    <a href="@Url.Action("Index", "Member")" class="btn btn-secondary">لغو</a>
</form>
